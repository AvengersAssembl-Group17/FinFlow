<HBox prefHeight="71.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="finflow.controller.TransactionItemController">
   <children>
      <ImageView fx:id="transactionImg" fitHeight="58.0" fitWidth="58.0">
         <image>
            <Image url="@../images/transaction.png" />
         </image>
      </ImageView>
      <Pane prefHeight="58.0" prefWidth="20.0" />
      <Label fx:id="transactionTitle" prefHeight="55.0" prefWidth="169.0" text="Transaction Title" />
      <Label fx:id="transactionDate" prefHeight="55.0" prefWidth="180.0" text="Date" textAlignment="RIGHT" />
      <Label fx:id="transactionNotes" prefHeight="55.0" prefWidth="18.0" text="notes" textAlignment="RIGHT" />
      <Label fx:id="transactionAmount" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="55.0" prefWidth="196.0" text="\$0.00">
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Label>
      <Pane prefHeight="58.0" prefWidth="30.0" />
      <Pane prefHeight="26.0" prefWidth="30.0" />
      <Pane prefHeight="58.0" prefWidth="30.0" />
      <TextField fx:id="newAmountField" prefHeight="26.0" prefWidth="160.0" promptText="New Amount" visible="false" onKeyPressed="#handleNewAmountFieldKeyPress" />
      <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateTransaction" prefHeight="26.0" prefWidth="88.0" text="Update" />
      <Button mnemonicParsing="false" onAction="#handleDeleteTransaction" prefHeight="26.0" prefWidth="81.0" text="Delete" />
   </children>
   <padding>
      <Insets right="10.0" />
   </padding>
   <HBox.margin>
      <Insets top="10.0" />
   </HBox.margin>
</HBox>

